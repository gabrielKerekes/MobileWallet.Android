<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.mobilewallet.android.avengerstoken.AvengersMainActivity" >

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="message text"
        android:id="@+id/message_textView"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#31535c"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:id="@+id/reject_transaction_button"
        android:onClick="onClick"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_style"
        android:layout_alignTop="@+id/confirm_transaction_button"
        android:layout_alignRight="@+id/message_textView"
        android:layout_alignEnd="@+id/message_textView"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/confirm_transaction_button"
        android:onClick="onClick"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_style"
        android:layout_below="@+id/message_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="47dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification_status_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#31535c"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/confirm_transaction_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>