<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_identity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilewallet.android.avengerstoken.ConfirmIdentityActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <!-- todo: GABO - strings -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:id="@+id/confirm_identity_button"
        android:text="Confirm identity"
        android:onClick="confirmButtonClick"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_style"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification_status_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#31535c"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/confirm_identity_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
