<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartwallet.android">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <permission
        android:name="com.google.android.gcm.demo.app.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.google.android.gcm.demo.app.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application xmlns:tools="http://schemas.android.com/tools"
        android:allowBackup="true"
        android:icon="@drawable/superwallet_burned"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity android:name="com.smartwallet.android.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.smartwallet.android.avengerstoken.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.avengers.avengerstoken" />
            </intent-filter>
        </receiver>

        <service android:name="com.smartwallet.android.avengerstoken.GcmIntentService" />
        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="com.smartwallet.android.avengerstoken.AvengersMainActivity" />
        <activity android:name="com.smartwallet.android.SuperwalletMainActivity" />
        <activity
            android:name="com.smartwallet.android.TopicActivity"
            android:parentActivityName="com.smartwallet.android.SuperwalletMainActivity" />
        <activity
            android:name="com.smartwallet.android.ProductActivity"
            android:parentActivityName="com.smartwallet.android.SuperwalletMainActivity" />
        <activity
            android:name="com.smartwallet.android.BankAccountActivity"
            android:parentActivityName="com.smartwallet.android.SuperwalletMainActivity" />
        <activity
            android:name="com.smartwallet.android.ServerInfoActivity"
            android:parentActivityName="com.smartwallet.android.SuperwalletMainActivity" />
        <activity
            android:name="com.smartwallet.android.BoughtProductsActivity"
            android:parentActivityName="com.smartwallet.android.SuperwalletMainActivity" />
        <activity
            android:name="com.smartwallet.android.NotificationListActivity"
            android:parentActivityName="com.smartwallet.android.SuperwalletMainActivity" />
        <activity
            android:name="com.smartwallet.android.AddingBankActivity"
            android:parentActivityName="com.smartwallet.android.SuperwalletMainActivity" />
        <activity
            android:name="com.smartwallet.android.avengerstoken.RegActivity"
            android:label="@string/title_activity_reg" />
        <activity
            android:name="com.smartwallet.android.avengerstoken.ConfirmTransactionActivity"
            android:label="@string/title_activity_confirm_transaction" />
        <activity
            android:name="com.smartwallet.android.avengerstoken.GridCard"
            android:label="@string/app_name" />
        <activity
            android:name="com.smartwallet.android.avengerstoken.PasswordWrite"
            android:label="@string/app_name" />
        <activity
            android:name="com.smartwallet.android.avengerstoken.OfflineToken"
            android:label="@string/title_activity_offline_token"
            android:parentActivityName="com.smartwallet.android.avengerstoken.AvengersMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.smartwallet.android.avengerstoken.AvengersMainActivity" />
        </activity>
        <activity android:name="com.smartwallet.android.avengerstoken.SetServiceIpActivity" />
        <activity android:name="com.smartwallet.android.avengerstoken.ConfirmIdentityActivity"/>
    </application>

</manifest>